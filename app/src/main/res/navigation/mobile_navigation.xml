        tools:layout="@layout/fragment_inquilino_contrato" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.example.trabajopracticoinmobiliaria.menu.ui.slideshow.DetalleInmuebleFragment"
        android:label="@string/informaci_n_del_inmueble"
        tools:layout="@layout/fragment_detalle_inmueble" />
    <fragment
        android:id="@+id/cambiarPasswordFragment"
        android:name="com.example.trabajopracticoinmobiliaria.menu.ui.gallery.CambiarPasswordFragment"
        android:label="@string/cambia_tu_contrase_a"
        tools:layout="@layout/fragment_cambiar_password" />
    <fragment
        android:id="@+id/agregarInmuebleFragment"
        android:name="com.example.trabajopracticoinmobiliaria.menu.ui.slideshow.AgregarInmuebleFragment"
