<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.ui.inquilino_contrato.DetalleContratoFragment">

    <!-- Fecha Inicio -->
    <LinearLayout
        android:id="@+id/layoutFechaInicioDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewFechaInicioDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicio:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFechaInicioDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Fecha Fin -->
    <LinearLayout
        android:id="@+id/layoutFechaFinDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFechaInicioDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewFechaFinDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha fin:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFechaFinDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Monto -->
    <LinearLayout
        android:id="@+id/layoutMontoDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFechaFinDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewMontoDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMontoDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Estado -->
    <LinearLayout
        android:id="@+id/layoutEstadoDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutMontoDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewEstadoDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEstadoDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Dirección del inmueble -->
    <LinearLayout
        android:id="@+id/layoutDireccionInmuebleDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutEstadoDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewDireccionInmuebleDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección del inmueble:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDireccionInmuebleDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Nombre del inquilino -->
    <LinearLayout
        android:id="@+id/layoutNombreContratoDC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDireccionInmuebleDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewNombreContratoDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquilino:  "
            android:textColor="#CF0226"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNombreInquilinoDC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Mensaje de error -->
    <TextView
        android:id="@+id/tvMensajeErrorContratoDC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text=""
        android:textColor="#CF0226"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutNombreContratoDC" />

    <Button
        android:id="@+id/btVerPagosDC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#96001E"
        android:text="Ver pagos"
        android:textColor="#000769"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutNombreContratoDC" />

</androidx.constraintlayout.widget.ConstraintLayout>
