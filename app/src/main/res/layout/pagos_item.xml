<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:radius="20dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        >

        <!-- Fecha del pago -->
        <LinearLayout
            android:id="@+id/layoutFechaPagoD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvEtiquetaFechaPagoD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha del pago:  "
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvFechaPagoD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Detalle -->
        <LinearLayout
            android:id="@+id/layoutDetallePagoD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutFechaPagoD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvEtiquetaDetallePagoD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle:  "
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDetallePagoD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Monto -->
        <LinearLayout
            android:id="@+id/layoutMontoPagoD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutDetallePagoD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvEtiquetaMontoPagoD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto:  "
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvMontoPagoD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Estado -->
        <LinearLayout
            android:id="@+id/layoutEstadoPagoD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutMontoPagoD">

            <TextView
                android:id="@+id/tvEtiquetaEstadoPagoD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:  "
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEstadoPagoD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
